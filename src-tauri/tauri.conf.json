{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sidekick-helper",
  "version": "0.1.0",
  "identifier": "com.dotaxis.sidekick-helper.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "width": 500,
        "height": 400,
        "decorations": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png"
    ]
  }
}
